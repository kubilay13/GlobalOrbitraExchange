<script>
   const connectWalletBtn = document.getElementById('connectWallet');
   const walletOptions = document.getElementById('walletOptions');
   const closeOptionsBtn = document.getElementById('closeOptions');
   const walletAddressDisplay = document.getElementById('walletAddress');
   const metamaskBtn = document.getElementById('metamaskOption');
   const tronlinkBtn = document.getElementById('tronlinkOption');

   // Connect Wallet butonuna tıklanınca seçenekleri göster
   connectWalletBtn.addEventListener('click', (e) => {
       e.preventDefault();
       walletOptions.style.display = 'block';  // Modal göster
   });

   // Seçenekleri kapat
   closeOptionsBtn.addEventListener('click', () => {
       walletOptions.style.display = 'none';
   });

   // Metamask Bağlantısı
   metamaskBtn.addEventListener('click', async () => {
       if (typeof window.ethereum !== 'undefined') {
           try {
               const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
               walletAddressDisplay.textContent = `Metamask Wallet: ${accounts[0]}`;
               metamaskBtn.classList.add('connected');
               metamaskBtn.innerHTML = "Metamask Connected ✅";
           } catch (error) {
               console.error('Metamask bağlanırken hata oluştu:', error);
               alert('Metamask bağlama işlemi iptal edildi.');
           }
       } else {
           alert('Metamask yüklü değil. Lütfen tarayıcınıza Metamask yükleyin.');
       }
       walletOptions.style.display = 'none';
   });

   // TronLink Bağlantısı
   tronlinkBtn.addEventListener('click', async () => {
       if (typeof window.tronLink !== 'undefined' && typeof window.tronWeb !== 'undefined') {
           try {
               console.log('TronLink yüklü ve tronWeb mevcut');
               const tronWeb = window.tronWeb;
               console.log('tronWeb objesi:', tronWeb);  // tronWeb objesini kontrol et

               // TronWeb objesi mevcutsa ve adres doğruysa
               if (tronWeb && tronWeb.defaultAddress && tronWeb.defaultAddress.base58) {
                   // Ağın doğru olduğundan emin ol
                   if (tronWeb.fullNode.host === 'https://api.trongrid.io') { // Mainnet kontrolü
                       const walletAddress = tronWeb.defaultAddress.base58;
                       walletAddressDisplay.textContent = `TronLink Wallet: ${walletAddress}`;
                       tronlinkBtn.classList.add('connected');
                       tronlinkBtn.innerHTML = "TronLink Connected ✅";
                   } else {
                       alert('Lütfen Tron ana ağını seçin. Şu anda yan ağ kullanıyorsunuz.');
                   }
               } else {
                   alert('TronLink cüzdanınızda oturum açılmamış. Lütfen TronLink cüzdanını açın ve oturum açın.');
               }
           } catch (error) {
               console.error('TronLink bağlanırken hata oluştu:', error);
               alert('TronLink bağlama işlemi sırasında hata oluştu. Lütfen tekrar deneyin.');
           }
       } else {
           alert('TronLink cüzdanı yüklü değil. Lütfen tarayıcınıza TronLink yükleyin.');
