@{
    ViewData["Title"] = "Giriş Yap";
}
<link href="~/css/login-signup.css" rel="stylesheet" />

<div class="auth-wrapper">
    <div class="login-box">
        <h1>Giriş Yap</h1>
        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()
            <input type="email" name="email" placeholder="E-posta" required />

            <div class="password-wrapper">
                <input type="password" name="password" placeholder="Şifre" required id="LoginPassword" />
                <span class="toggle-password" onclick="toggleLoginPassword()">👁️</span>
            </div>

            <a href="@Url.Action("SignUp", "LoginSignUp")" class="link">Kayıt Ol</a> <br />
            <a href="@Url.Action("ForgotPassword", "LoginSignUp")" class="link">Şifremi Unuttum</a>
            <button type="submit">Giriş Yap</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</div>
<script>
    function toggleLoginPassword() {
        const passwordInput = document.getElementById("LoginPassword");
        const toggleIcon = passwordInput.nextElementSibling; // span
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleIcon.textContent = "🙈";
        } else {
            passwordInput.type = "password";
            toggleIcon.textContent = "👁️";
        }
    }
</script>